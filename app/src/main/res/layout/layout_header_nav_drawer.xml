<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">
    <RelativeLayout
        android:id="@+id/layoutUserInfo_navmenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:clickable="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgProfile_navmenu"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/default_profile"
            android:layout_centerHorizontal="true"
            fresco:placeholderImage="@color/colorVeryLightGray"
            fresco:actualImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            android:layout_marginTop="@dimen/_25sdp"
            fresco:roundingBorderWidth="@dimen/_1sdp"
            fresco:roundingBorderColor="@android:color/white" />

        <TextView
            android:id="@+id/txtUsername_navmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:layout_below="@+id/imgProfile_navmenu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="@color/colorNavItemText"
            fontPath="fonts/SF-UI-Display-Bold.otf"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtEmail_navmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="john.doe@gmail.com"
            android:layout_below="@+id/txtUsername_navmenu"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorNavItemText"
            fontPath="fonts/SF-UI-Display-Light.otf"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            />


    </RelativeLayout>
</LinearLayout>